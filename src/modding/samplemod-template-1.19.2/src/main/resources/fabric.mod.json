{
	"schemaVersion": 1,
	"id": "samplemod",
	"version": "${version}",
	"name": "SampleMod",
	"description": "This is an example description! Tell everyone what your mod is about!",
	"authors": [
		"Me!"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/samplemod/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "com.example.ExampleMod",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "com.example.ExampleModClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"samplemod.mixins.json",
		{
			"config": "samplemod.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.14",
		"minecraft": "~1.19.2",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": ">=1.8.10"
	},
	"suggests": {
		"another-mod": "*"
	}
}